<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/registerinfo_backgroud"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/gerenzhuye_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80ffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <include layout="@layout/title_layout" />

        <RelativeLayout
            android:id="@+id/rl_registerinfo_takeheadimage"
            android:layout_width="168dp"
            android:layout_height="168dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/takehead"
            android:layout_marginTop="12dp" >
			
            <ImageView
                android:id="@+id/registerinfo_headimage"
                android:layout_width="156dp"
                android:layout_height="156dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/head_null" />

            <ImageView
                android:id="@+id/registerinfo_headimageline"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
				/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/EdittextLayout"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical" >

            <EditText
                android:id="@+id/registerinfo_edit_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:background="@color/none"
                android:gravity="center"
                android:hint="输入用户名"
                android:maxEms="8"
                android:minEms="1"
                android:textColor="@color/meibao_item_name_color"
                android:textCursorDrawable="@drawable/guangbiao"
                android:textSize="@dimen/font2" >
            </EditText>

            <View
                android:id="@+id/userCenterLine"
                android:layout_width="256dp"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/meibao_color_6" />

            <ImageView
                android:id="@+id/iv_registerinfo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/userCenterVerticalLine"
                android:background="@drawable/update_userinfo" />

            <View
                android:id="@+id/userCenterVerticalLine"
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/registerinfo_edit_name"
                android:background="@color/meibao_color_6"
                android:visibility="invisible" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/xieyiLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/centerUserAge"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_age_full_man"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="21岁 "
                android:textColor="@color/white"
                android:textSize="@dimen/font6" />

            <TextView
                android:id="@+id/centerUserLevel"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:background="@drawable/shape_age_full_lv"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="Lv1 "
                android:textColor="@color/white"
                android:textSize="@dimen/font6" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fenOrAttentionLayout"
            android:layout_width="256dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/attentionLayout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="28dp"
                android:layout_weight="1.0"
                android:background="@drawable/gerenzhuye_left"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="关注"
                    android:textColor="@color/meibao_color_3"
                    android:textSize="@dimen/font4" />

                <TextView
                    android:id="@+id/centerUserAttention"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:textColor="@color/meibao_color_5"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fansLayout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="28dp"
                android:layout_weight="1.0"
                android:background="@drawable/gerenzhuye_right"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="粉儿 "
                    android:textColor="@color/meibao_color_5"
                    android:textSize="@dimen/font4" />
				
                <TextView
                    android:id="@+id/centerUserFans"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:textColor="@color/meibao_color_5"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/userCenterAttentionButton"
            android:layout_width="256dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:src="@drawable/wode_guanzhu" />

        <TextView
            android:id="@+id/userCenterFinish"
            android:layout_width="256dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_member"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="@color/meibao_color_1"
            android:textSize="@dimen/font2"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/usercenter_opinion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/usercenter_opinion"
        android:visibility="gone" />

    <TextView
        android:id="@+id/updatePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="28dp"
        android:layout_marginLeft="16dp"
        android:text="退出登录"
        android:textColor="@color/meibao_color_1"
        android:textSize="@dimen/font3"
        android:visibility="gone" />

</RelativeLayout>