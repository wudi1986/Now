<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
		<RelativeLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="48dp"
   		    >
		    <LinearLayout 
		        android:id="@+id/flashLightButton"
		        android:layout_width="wrap_content"
		        android:layout_height="48dp"
		        android:orientation="horizontal"
		        android:layout_marginLeft="8dp"
		        android:layout_centerVertical="true"
		        android:layout_alignParentLeft="true"
		        >
		     	<ImageView
	                android:id="@+id/camera_fight"
	                android:layout_width="32dp"
	                android:layout_height="32dp"
	                android:layout_gravity="center_vertical"
	                android:src="@drawable/camera_flashlight" />
	
	            <TextView
	                android:id="@+id/flashInfo"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_vertical"
	                android:gravity="center"
	                android:text="关闭"
	                android:textColor="@color/white"
	                android:textSize="@dimen/font6" />
            </LinearLayout>
            
		    <TextView 
		        android:id="@+id/camera_now_what"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="进群亮个“相”"
		        android:textSize="@dimen/font2"
		        android:textColor="#f8b551"
		        android:layout_centerInParent="true"
		        android:visibility="invisible"
		        />
		    <ImageView
	            android:id="@+id/cameraTurn"
	            android:layout_width="48dp"
	            android:layout_height="48dp"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:src="@drawable/camera_turn" />
		</RelativeLayout>

        <FrameLayout
            android:id="@+id/cameraFrameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            >
        </FrameLayout>

        <FrameLayout
            android:id="@+id/cameraResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             >

            <ImageView
                android:id="@+id/cameraPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/toumingimg" />
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/cameraBg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black" >
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="36dp">

            <TextView
                android:id="@+id/camera_finish"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="@dimen/font2" />
            
             <TextView
                android:id="@+id/camera_back"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="重拍"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/font2" />

            <ImageView
                android:id="@+id/camera_paizhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/paizhao" />

            <TextView
                android:id="@+id/camera_photos"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="相册"
                android:textColor="@color/white"
                android:textSize="@dimen/font2" />
            
             <TextView
                android:id="@+id/camera_return"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:visibility="gone"
                android:text="跳过"
                android:textColor="@color/white"
                android:textSize="@dimen/font2" />

            <TextView
                android:id="@+id/camera_confrim"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:visibility="gone"
                android:text="使用图片"
                android:textColor="@color/white"
                android:layout_marginRight="16dp"
                android:textSize="@dimen/font2"
                />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>