<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@drawable/zhuce_bg"
	    android:orientation="vertical"
	    >
	    <include layout="@layout/title_layout" />
        <LinearLayout
                android:id="@+id/registerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="94dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="242dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="4dp"
                        android:text="现密码"
                        android:textColor="@color/meibao_color_6"
                        android:textSize="@dimen/font3" />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/meibao_color_6" />
                    <EditText
                        android:id="@+id/oldPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:background="@color/none"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="输入旧密码"
                        android:maxEms="8"
                        android:minEms="1"
                        android:textCursorDrawable="@drawable/guangbiao"
                        android:textColor="@color/meibao_color_6"
                        android:textSize="@dimen/font3"
                        android:textColorHint="@color/meibao_color_6"
                          />
                </LinearLayout>

                <View
                    android:layout_width="242dp"
                    android:layout_height="0.5dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/meibao_color_6" />

                <LinearLayout
                    android:layout_width="242dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="4dp"
                        android:text="新密码"
                        android:textColor="@color/meibao_color_6"
                        android:textSize="@dimen/font3" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/meibao_color_6" />
                    <EditText
                        android:id="@+id/newPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:background="@color/none"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="输入新密码"
                        android:maxEms="8"
                        android:minEms="1"
                        android:inputType="textPassword"
                        android:textCursorDrawable="@drawable/guangbiao"
                        android:textColor="@color/meibao_color_6"
                        android:textSize="@dimen/font3"
                        android:textColorHint="@color/meibao_color_6"/>
                </LinearLayout>

                <View
                    android:layout_width="242dp"
                    android:layout_height="0.5dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/meibao_color_6" />
                <LinearLayout
                    android:layout_width="242dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="4dp"
                        android:text="确   认"
                        android:textColor="@color/meibao_color_6"
                        android:textSize="@dimen/font3" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/meibao_color_6" />
                    <EditText
                        android:id="@+id/confirmpassword"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:background="@color/none"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="再次输入新密码确认"
                        android:maxEms="8"
                        android:minEms="1"
                        android:inputType="textPassword"
                        android:textCursorDrawable="@drawable/guangbiao"
                        android:textColor="@color/meibao_color_6"
                        android:textSize="@dimen/font3"
                        android:textColorHint="@color/meibao_color_6"/>
                </LinearLayout>
                <TextView
                android:id="@+id/finish"
                android:layout_width="242dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="确认修改"
                android:background="@drawable/shape_member"
                android:textColor="@color/gray_5"
                android:textSize="@dimen/font2" />
                <!-- 都输入完了 背景改成shape_color3 -->

               
            </LinearLayout>
	    
	</LinearLayout>
    

</RelativeLayout>
