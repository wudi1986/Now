<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/share"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc000000" 
    android:paddingRight="16dp"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/share_back"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="@dimen/font2"
        android:text="取消"
        
        android:textColor="@color/blue"
        android:background="@drawable/shape_share" />

	<LinearLayout
	    android:id="@+id/midLayout"
        android:layout_width="330dp"
       	android:layout_height="225dp"
        android:layout_above="@+id/share_back"
        android:layout_centerHorizontal="true"
       	android:layout_marginBottom="12dp"
        android:background="@drawable/shape_share"
        android:orientation="vertical"
        >
        
          <TextView
            android:id="@+id/qqShare"
            android:layout_width="match_parent"
        	android:layout_height="45dp"
            android:text="QQ好友"
            android:textColor="@color/blue"
        	android:gravity="center"
    		android:textSize="@dimen/font2" />
        <View
	        android:layout_width="match_parent"
	        android:layout_height="1dip"
	        android:background="#696969" />
        <TextView
            android:id="@+id/qqRoomShare"
            android:layout_width="match_parent"
        	android:layout_height="45dp"
            android:text="QQ空间"
            android:textColor="@color/blue"
        	android:gravity="center"
    		android:textSize="@dimen/font2"  />
        <View
	        android:layout_width="match_parent"
	        android:layout_height="1dip"
	        android:background="#696969" />
          <TextView
            android:id="@+id/weixin"
            android:layout_width="match_parent"
        	android:layout_height="45dp"
            android:text="微信好友"
            android:textColor="@color/blue"
        	android:gravity="center"
    		android:textSize="@dimen/font2" />
        <View
	        android:layout_width="match_parent"
	        android:layout_height="1dip"
	        android:background="#696969" />
        <TextView
            android:id="@+id/circle"
            android:layout_width="match_parent"
        	android:layout_height="45dp"
            android:text="微信朋友圈"
            android:textColor="@color/blue"
        	android:gravity="center"
    		android:textSize="@dimen/font2" />
        <View
	        android:layout_width="match_parent"
	        android:layout_height="1dip"
	        android:background="#696969" />
        <TextView
            android:id="@+id/sinaShare"
            android:layout_width="match_parent"
        	android:layout_height="45dp"
            android:text="新浪微博"
            android:textColor="@color/blue"
        	android:gravity="center"
    		android:textSize="@dimen/font2" />
        </LinearLayout>

          <TextView
              android:id="@+id/share_invitation"
              android:layout_width="330dp"
              android:layout_height="45dp"
              android:layout_above="@+id/midLayout"
              android:layout_centerHorizontal="true"
              android:layout_marginBottom="12dp"
              android:background="@drawable/shape_share"
              android:gravity="center"
              android:text="邀请"
              android:textColor="@color/blue"
              android:textSize="@dimen/font2" />

</RelativeLayout>