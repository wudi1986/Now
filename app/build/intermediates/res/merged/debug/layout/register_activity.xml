<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@color/white"
	    android:orientation="vertical"
	    >
	    <include layout="@layout/title_layout" />
        <LinearLayout
                android:id="@+id/registerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_marginTop="94dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                   	android:layout_marginTop="2dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="账   号"
                        android:textColor="@color/meibao_color_6"
                        android:textSize="@dimen/font3" />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/meibao_color_6" />
                    <EditText
                        android:id="@+id/register_user"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:background="@color/none"
                        android:ems="10"
                        android:gravity="center"
                        android:maxEms="8"
                        android:minEms="1"
                        android:textCursorDrawable="@drawable/guangbiao"
                        android:textColor="@color/meibao_color_3"
                        android:textSize="@dimen/font3"
                        android:textColorHint="@color/meibao_color_6"
                        android:hint="输入邮箱地址"
                          />
                    <ImageView 
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/userName_sign"
                        android:visibility="gone"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/meibao_login_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                   	android:layout_marginTop="2dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="密   码"
                        android:textColor="@color/meibao_color_6"
                        android:textSize="@dimen/font3" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/meibao_color_6" />
                        <EditText
                        android:id="@+id/register_password"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:background="@color/none"
                        android:ems="10"
                        android:gravity="center"
                        android:maxEms="8"
                        android:minEms="1"
                        android:inputType="textPassword"
                        android:textCursorDrawable="@drawable/guangbiao"
                        android:textColor="@color/meibao_color_3"
                        android:textSize="@dimen/font3"
                        android:textColorHint="@color/meibao_color_6"
                        android:hint="6-12位数字或英文字母"/>
                        
                    <ImageView 
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/password_sign"
                        android:visibility="gone"
                        />
                    
                    
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/meibao_login_line" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="确    认"
                        android:textColor="@color/meibao_color_6"
                        android:textSize="@dimen/font3" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/meibao_color_6" />
                    <EditText
                        android:id="@+id/register_confirmpassword"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:background="@color/none"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="再次输入密码确认"
                        android:maxEms="8"
                        android:minEms="1"
                        android:inputType="textPassword"
                        android:textCursorDrawable="@drawable/guangbiao"
                        android:textColor="@color/meibao_color_6"
                        android:textSize="@dimen/font3"
                        android:textColorHint="@color/meibao_color_6"/>
                     
                    <ImageView 
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/password_confirm_sign"
                        />
                </LinearLayout>
                <RelativeLayout 
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal" 
                    >
                    <TextView 
                        android:id="@+id/register_himt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/gray_7"
                        android:textSize="@dimen/font5"
                        />
                </RelativeLayout>
                <TextView
                android:id="@+id/registerFinish"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="下一步"
                android:background="@drawable/shape_member"
                android:textColor="@color/meibao_color_3"
                android:textSize="@dimen/font3" />
                <!-- 都输入完了 背景改成shape_color3 -->

               
            </LinearLayout>
<!--             <ImageView -->
<!--                 android:id="@+id/xieyiImage" -->
<!--                 android:layout_marginTop="100dp" -->
<!--                 android:layout_width="wrap_content" -->
<!--                 android:layout_height="wrap_content" -->
<!--                 android:layout_gravity="center_horizontal" -->
<!--                 android:src="@drawable/zhuce_mianze" /> -->
	    
	</LinearLayout>
    

</RelativeLayout>
