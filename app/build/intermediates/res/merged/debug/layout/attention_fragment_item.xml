<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@color/white" >

    <View
        android:id="@+id/view1"
        android:layout_width="1dp"
        android:layout_height="72dp" />

    <RelativeLayout
        android:id="@+id/headLayout"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp" >

        <com.yktx.util.RoundImageView
            android:id="@+id/newUserHead"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/head_null" />
    </RelativeLayout>

    <!--
         <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:background="@color/black" />
    -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
		android:layout_marginLeft="80dp">

        <LinearLayout
            android:id="@+id/newTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/newUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="TextView"
                android:textColor="@color/meibao_item_name_color"
                android:textSize="@dimen/font3" />

            <TextView
                android:id="@+id/newUserAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:background="@drawable/shape_age"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="TextView"
                android:textColor="@color/meibao_color_9"
                android:textSize="10dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/newUserLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:background="@drawable/shape_lv"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="TextView"
                android:textColor="@color/meibao_lv_color"
                android:textSize="10dp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/newBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/newTitle"
            android:layout_below="@id/newTitle"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/item_now_sign" />

            <TextView
                android:id="@+id/attentionTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="正在："
                android:textColor="@color/meibao_color_6"
                android:textSize="@dimen/font5" />

            <TextView
                android:id="@+id/newGroupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="你现在闹哪样"
                android:textColor="@color/nearfragment_textother_color"
                android:textSize="@dimen/font5" />

            <TextView
                android:id="@+id/newGroupPeopleNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="69人在线"
                android:textColor="@color/meibao_color_6"
                android:textSize="@dimen/font5" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="80dp"
        android:background="@color/meibao_color_6" />

</RelativeLayout>