    <LinearLayout
        android:id="@+id/rl1"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_marginTop="287dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >
		
        <EditText
            android:id="@+id/phone"
            android:layout_width="191dp"
            android:layout_height="fill_parent"
            android:background="@drawable/shape_whitebg"
            android:ems="10"
            android:gravity="center"
            android:hint="请输入用户名"
            android:maxLength="8"
            android:textColor="@color/meibao_color_7"
            android:textColorHint="@color/meibao_color_7"
            android:textCursorDrawable="@drawable/guangbiao"
            android:textSize="@dimen/font2">
        </EditText>
 		<TextView
	        android:id="@+id/next"
	        android:layout_width="51dp"
	        android:layout_height="fill_parent"
	        android:layout_marginLeft="10dp"
	        android:layout_centerHorizontal="true"
	        android:background="@drawable/shape_yanzheng"
	        android:gravity="center"
	        android:text="完成"
	        android:textColor="@color/white"
	        android:textSize="@dimen/font2" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl1"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/checkBox"
            style="@style/MyCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已阅读并同意 "
            android:textColor="@color/white"
            android:textSize="@dimen/font5" />

        <TextView
            android:id="@+id/unline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用条款和隐私策略 "
            android:textColor="#7dccf9"
            android:textSize="@dimen/font5" />
    </LinearLayout>



</RelativeLayout>