<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hotLayout"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/hotLeftLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/hotLeftImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/recommend_item_6"
            android:visibility="gone" />

        <TextView
            android:id="@+id/hotMsgnum"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignRight="@id/hotLeftImage"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/recommend_item_1"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="@dimen/font2" />
    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="64dp" />

    <RelativeLayout
        android:id="@+id/hotBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/hotLeftLayout"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/hotGroupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="你现在闹哪样"
            android:textColor="@color/meibao_color_3"
            android:textSize="@dimen/font2" />

        <TextView
            android:id="@+id/hotGroupMsgCount"
            style="@style/chat_text_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/hotGroupName"
            android:layout_below="@id/hotGroupName"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:text="累计产生3164条消息"
            android:textColor="@color/meibao_color_6"
            android:textSize="@dimen/font5"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp" >

        <TextView
            android:id="@+id/hotGroupPeopleNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="69"
            android:textColor="@color/meibao_color_6"
            android:textSize="@dimen/font5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/hotGroupPeopleNum"
            android:layout_toRightOf="@id/hotGroupPeopleNum"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="人"
            android:textColor="@color/meibao_color_6"
            android:textSize="@dimen/font5" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignLeft="@id/hotBottom"
        android:layout_alignParentBottom="true"
        android:background="@color/meibao_color_6" />

</RelativeLayout>