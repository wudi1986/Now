<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:background="@drawable/register_dialog_background" >

        <TextView
            android:id="@+id/register_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="正在注册，请稍后"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font2" />
        <Button 
            android:id="@+id/register_exit"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/register_dialogexit_background"
            android:text="取消"
            android:gravity="center"
            android:textSize="@dimen/font6"
            />
    </RelativeLayout>

</RelativeLayout>