        <!-- <ImageView -->
        <!-- android:id="@+id/imageView2" -->
        <!-- android:layout_width="10dp" -->
        <!-- android:layout_height="10dp" -->
        <!-- android:layout_gravity="center_vertical" -->
        <!-- android:layout_marginBottom="1dp" -->
        <!-- android:src="@drawable/new_time" /> -->


        <!-- <TextView -->
        <!-- android:id="@+id/newSendTime" -->
        <!-- android:layout_width="wrap_content" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_gravity="center_vertical" -->
        <!-- android:layout_marginBottom="1dp" -->
        <!-- android:layout_marginLeft="4dp" -->
        <!-- android:gravity="center" -->
        <!-- android:text="正在：" -->
        <!-- android:textColor="@color/meibao_color_6" -->
        <!-- android:textSize="@dimen/font7" /> -->


        <!-- <ImageView -->
        <!-- android:id="@+id/new_distansImage" -->
        <!-- android:layout_width="10dp" -->
        <!-- android:layout_height="10dp" -->
        <!-- android:layout_gravity="center_vertical" -->
        <!-- android:layout_marginBottom="1dp" -->
        <!-- android:layout_marginLeft="8dp" -->
        <!-- android:src="@drawable/new_juli" /> -->

        <TextView
            android:id="@+id/newUserDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="4dp"
            android:includeFontPadding="false"
            android:text="距离"
            android:textColor="@color/meibao_color_6"
            android:textSize="@dimen/font6" />

        <TextView
            android:id="@+id/newSendTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:text="正在："
            android:textColor="@color/meibao_color_6"
            android:textSize="@dimen/font6" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/newTitle"
        android:layout_marginTop="12dp"
        android:background="@color/meibao_color_7" 
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/contentLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/newTitle"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp" >

        <!-- <ImageView -->
        <!-- android:id="@+id/view" -->
        <!-- android:layout_width="1dp" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_marginBottom="14dp" -->
        <!-- android:layout_marginRight="8dp" -->
        <!-- android:layout_marginTop="4dp" -->
        <!-- android:layout_toRightOf="@id/new_chat_text" /> -->

        <LinearLayout
            android:id="@+id/imageLayout"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp" 
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/new_chat_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="14dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image_null" />

            <ImageView
                android:id="@+id/new_chat_photo2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="8dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:src="@drawable/image_null" />

            <ImageView
                android:id="@+id/new_chat_photo3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="8dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:src="@drawable/image_null" />
        </LinearLayout>

        <TextView
            android:id="@+id/new_chat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageLayout"
            android:layout_marginRight="16dp"
            android:autoLink="email|web"
            android:includeFontPadding="false"
            android:textColor="@color/meibao_color_3"
            android:textSize="@dimen/font3" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/voice_photo"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@anim/progress_round"
                android:visibility="gone" />

            <TextView
                android:id="@+id/voice_text"
                style="@style/chat_text_title_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/voice_photo"
                android:gravity="center"
                android:text="57&apos;&apos;"
                android:textColor="@color/meibao_color_3"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/newBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/contentLayout"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/voice_photo"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/new_qunzu"
            android:visibility="gone" />

        <TextView
            android:id="@+id/newGroupName"
            style="@style/chat_text_title_style"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:text="#你现在闹哪样"
            android:textColor="@color/meibao_color_2"
            android:textSize="@dimen/font5" />

        <ImageView
            android:id="@+id/voice_photo"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24dp"
            android:src="@drawable/new_people"
            android:visibility="gone" />

        <TextView
            android:id="@+id/newGroupPeopleNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:text="69人在线"
            android:textColor="@color/meibao_color_6"
            android:textSize="@dimen/font5"
            android:visibility="gone" />
    </LinearLayout>
	
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_below="@id/contentLayout"
        android:layout_marginTop="12dp">
    <ImageView
        android:id="@+id/newZanImage"
        android:layout_width="34dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:background="@drawable/chat_image_zan_select" />
    
    	<TextView 
    	    android:id="@+id/newZanNum"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
    	    android:textColor="@color/meibao_color_6"
    	    android:textSize="@dimen/font4"
    	    android:text="323"
    	    android:gravity="center"
    	    android:layout_toRightOf="@id/newZanImage"
    	    />
    </RelativeLayout>

    <View
        android:id="@+id/bottomView"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_below="@id/newBottom" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:background="@color/meibao_color_8" />

</RelativeLayout>