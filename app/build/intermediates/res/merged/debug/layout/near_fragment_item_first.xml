<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@color/white" >

    <!--
         <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:background="@color/black" />
    -->

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/near_fragment_first_item_left" />

    <RelativeLayout
        android:id="@+id/newBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/imageView2"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/newGroupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="30dp"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxWidth="180dp"
            android:singleLine="true"
            android:text="你现在闹哪样"
            android:textColor="@color/meibao_color_1"
            android:textSize="@dimen/font2" />

        <TextView
            android:id="@+id/nearMessageNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/newGroupName"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="累计消息"
            android:textColor="@color/meibao_color_6"
            android:textSize="@dimen/font5"
            android:visibility="gone" />

        <TextView
            android:id="@+id/newGroupPeopleNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/newGroupName"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/nearMessageNum"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="69人在线"
            android:textColor="@color/meibao_color_6"
            android:textSize="@dimen/font5"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:layout_width="10dp"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:src="@drawable/near_first_right_image" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/imageView2"
        android:background="@color/meibao_color_6" />

</RelativeLayout>