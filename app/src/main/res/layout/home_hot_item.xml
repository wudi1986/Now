<?xml version="1.0" encoding="utf-8"?>
<com.yktx.util.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >
        <ImageView
            android:id="@+id/hot_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/head_null" />

        <TextView
            android:id="@+id/hot_groupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/half_alpha"
            android:gravity="center_vertical"
            android:paddingLeft="11dp"
            android:text="立即体验"
            android:maxEms="5" 
            android:singleLine="true"
            android:ellipsize="end" 
            android:textColor="@color/white"
            android:textSize="@dimen/font2" />

        <TextView
            android:id="@+id/hot_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hot_groupName"
            android:layout_marginLeft="12dp"
            android:background="@drawable/home_hot_num"
            android:layout_marginTop="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="2dp"
            android:text="100人"
            android:textColor="@color/white"
            android:textSize="8sp" />
</com.yktx.util.SquareLayout>