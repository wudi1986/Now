<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/share"
    android:layout_width="360dp"
    android:layout_height="fill_parent"
    android:background="#cc000000" 
    android:paddingRight="16dp"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/share_back"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="@dimen/font2"
        android:text="取消"
        
        android:textColor="@color/blue"
        android:background="@drawable/shape_share" />

	<LinearLayout
	    android:id="@+id/midLayout"
        android:layout_width="330dp"
       	android:layout_height="45dp"
        android:layout_above="@+id/share_back"
        android:layout_centerHorizontal="true"
       	android:layout_marginBottom="12dp"
        android:background="@drawable/shape_share"
        android:orientation="vertical"
        >
        
          <TextView
            android:id="@+id/registerBotton"
            android:layout_width="match_parent"
        	android:layout_height="45dp"
            android:text="注册"
            android:textColor="@color/blue"
        	android:gravity="center"
    		android:textSize="@dimen/font2" />
        <View
	        android:layout_width="match_parent"
	        android:layout_height="1dip"
	        android:background="#696969" />
        <View
	        android:layout_width="match_parent"
	        android:layout_height="1dip"
	        android:background="#696969" />
        <View
	        android:layout_width="match_parent"
	        android:layout_height="1dip"
	        android:background="#696969" />
        <View
	        android:layout_width="match_parent"
	        android:layout_height="1dip"
	        android:background="#696969" />
        </LinearLayout>

          <TextView
              android:id="@+id/loginBotton"
              android:layout_width="330dp"
              android:layout_height="45dp"
              android:layout_above="@+id/midLayout"
              android:layout_centerHorizontal="true"
              android:layout_marginBottom="4dp"
              android:background="@drawable/shape_share"
              android:gravity="center"
              android:text="登录"
              android:textColor="@color/blue"
              android:textSize="@dimen/font2" />

</RelativeLayout>