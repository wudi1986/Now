<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="48dp">
		<LinearLayout 
		    android:layout_width="wrap_content"
	        android:layout_centerInParent="true"
        	android:layout_height="48dp"
		    >
	        <TextView
	            android:id="@+id/title"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:gravity="center_vertical"
	            android:text="Now"
	            android:textColor="@color/meibao_color_3"
	            android:textSize="@dimen/font2"/>
	        <TextView
	            android:id="@+id/subtitle"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:gravity="center_vertical"
	            android:visibility="gone"
	            android:text="123人在线"
	            android:textColor="@color/meibao_color_1"
	            android:textSize="@dimen/font6"/>
			</LinearLayout>
        <ImageView
            android:id="@+id/titleImage"
            android:layout_width="56dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="@drawable/now_title"
            android:visibility="gone" />

        <TextView
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:textColor="@color/meibao_color_3"
            android:textSize="@dimen/font3"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_rightImage"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@+id/rightImage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@drawable/main_fankui" />
        </RelativeLayout>

        <TextView
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:paddingBottom="4dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:text="返回"
            android:textColor="@color/meibao_color_3"
            android:textSize="@dimen/font3"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_leftImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@+id/leftImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:src="@drawable/main_personal" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>