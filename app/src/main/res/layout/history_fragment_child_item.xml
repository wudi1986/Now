<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="@color/white">
<RelativeLayout 
    android:id="@+id/chidLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <View
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_marginLeft="28dp"
        android:background="@color/meibao_color_6" />

    <ImageView
        android:id="@+id/bottomLine"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="32dp"
		android:background="@color/meibao_color_6"/>
    
    <RelativeLayout
        android:id="@+id/historyLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imagesign"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/history_fragment_child_left" />

        <TextView
            android:id="@+id/historyGroupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@id/imagesign"
            android:includeFontPadding="false"
            android:text="你现在闹哪样"
            android:textColor="@color/meibao_item_name_color"
            android:textSize="@dimen/font3" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/historyLastPhoto"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:src="@drawable/near_fragment_item_left"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/historyLeft"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/historyTime"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/history_fragment_child_time" />

        <TextView
            android:id="@+id/historyLastTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="最后进入"
            android:textColor="@color/meibao_color_6"
            android:textSize="@dimen/font5" />

        <ImageView
            android:id="@+id/atImage"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/item_at_sign"
            android:visibility="gone" />

        <TextView
            android:id="@+id/historyGroupMsgCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="64条"
            android:textColor="@color/nearfragment_textother_color"
            android:textSize="@dimen/font5"
            android:visibility="gone" />
    </LinearLayout>

    <!-- <View -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="1dp" -->
    <!-- android:layout_alignParentBottom="true" -->
    <!-- android:background="@color/meibao_color_6" /> -->

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/linearLayout1"
        android:layout_below="@id/linearLayout1"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="在线："
            android:textColor="@color/meibao_color_6"
            android:textSize="@dimen/font5" />

        <ImageView
            android:id="@+id/historyChildOnLine1"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="9dp"
            android:src="@drawable/head_null" />

        <ImageView
            android:id="@+id/historyChildOnLine2"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/head_null" />

        <ImageView
            android:id="@+id/historyChildOnLine3"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/head_null" />

        <ImageView
            android:id="@+id/historyChildOnLine4"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/head_null" />

        <ImageView
            android:id="@+id/historyChildOnLine5"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/head_null" />

        <ImageView
            android:id="@+id/historyChildOnLine6"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/head_null" />

        <TextView
            android:id="@+id/historyGroupPeopleNum"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/takehead"
            android:ellipsize="end"
            android:gravity="center"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="888"
            android:textColor="@color/meibao_color_6"
            android:textSize="@dimen/font5" />
    </LinearLayout>
	
    <View
        android:id="@+id/bottomHLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
		android:layout_alignParentBottom="true"
        android:background="@color/meibao_color_6" />
</RelativeLayout>
</RelativeLayout>